<!--begin::Alert-->
<div class="@Class alert alert-dismissible bg-light-@(IsDanger ? "danger" : "success") d-flex flex-center flex-column py-10 px-10 px-lg-20 mb-10">
    @if (OnCloseUrl != string.Empty)
    {
        <!--begin::Close-->
        <button type="button" onclick="window.location.href='@OnCloseUrl'" class="position-absolute top-0 end-0 m-2 btn btn-icon btn-icon-@(IsDanger ? "danger" : "success")" data-bs-dismiss="alert">
            <i class="ki-duotone ki-cross fs-1">
                <span class="path1"></span>
                <span class="path2"></span>
            </i>
        </button>
        <!--end::Close-->
    }

    <!--begin::Icon-->
    <i class="ki-duotone @(IsDanger ? "ki-information-5" : "ki-shield-tick") fs-5tx text-@(IsDanger ? "danger" : "success") mb-5"><span class="path1"></span><span class="path2"></span><span class="path3"></span></i>
    <!--end::Icon-->
    <!--begin::Wrapper-->
    <div class="text-center">
        <!--begin::Title-->
        <h1 class="fw-bold mb-5">@Title</h1>
        <!--end::Title-->
        <!--begin::Separator-->
        <div class="separator separator-dashed border-@(IsDanger ? "danger" : "success") opacity-25 mb-5"></div>
        <!--end::Separator-->
        <!--begin::Content-->
        <div class="mb-9 text-gray-900">
            @Description
        </div>
        <!--end::Content-->
    </div>
    <!--end::Wrapper-->
</div>
<!--end::Alert-->
@code {
    [Parameter] public string OnCloseUrl { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public bool IsDanger { get; set; }
}
